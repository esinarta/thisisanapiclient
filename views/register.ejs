<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/header') %>
    <link rel='stylesheet' href='/stylesheets/register.css' />
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div id="register-container" class="container fill">
      <h1><%= title %></h1>
      <form id='registrationForm' action='/register' method='POST'>
        <label for="name">Name</label>
        <br>
        <input type="text" placeholder="Name" name="name" class="formInput" required>
        <br>
        <label for="username">Username</label>
        <br>
        <input type="text" placeholder="Username" name="username" class="formInput" required>
        <br>
        <label for="password">Password</label>
        <br>
        <input type="password" placeholder="Password" name="password" class="formInput" required>
        <p class="errorLabel"><%= errorMsg %></p>
        <button type="submit" id="registerBtn" class="goodBtn">Register</button>
      </form>
      <button class="backBtn" onclick="window.location='/'">Back</button>
    </div>
    <%- include('partials/scripts') %>
  </body>
</html>
