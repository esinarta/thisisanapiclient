<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/header') %>
    <link rel="stylesheet" href="stylesheets/profile.css"/>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div id="profileContainer" class="container fill">
      <h1><%= title %></h1>
      <form id='profileForm' action="/users/edit" method="POST">
        <input type="hidden" name="id" value="<%= userid %>" />
        <label for="name">Name</label>
        <input type="text" placeholder="Name" name="name" class="formInput" value="<%= user.name %>" required>
        <br>
        <label for="username">Username</label>
        <input type="text" placeholder="Username" name="username" class="formInput" value="<%= user.username %>" required>
        <br>
        <button type="submit" id="saveBtn" class="goodBtn">Save Changes</button>
      </form>
      <form id="deleteForm" action='<%= "/users/delete" %>' method='POST'>
        <button type="submit" id="deleteBtn" class="badBtn">Delete</button>
      </form>
    </div>

    <script src="javascripts/profile.js"></script>
  </body>
</html>
